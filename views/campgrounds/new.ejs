<%- include("../partials/header.ejs") %>

<div class="container">
	<h1 class="text-center">Create a New Campground</h1>
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Campground Name" name="campground[name]">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Image URL" name="campground[image]">
				</div>
				<div class="form-group">
					<input type="number" class="form-control" placeholder="Price" name="campground[price]" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<textarea class="form-control" placeholder="Enter a description here" name="campground[description]" style="resize: none"></textarea>
				</div>
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</form>
			<a href="/campgrounds">Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer.ejs") %>