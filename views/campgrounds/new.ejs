<%- include("../partials/header.ejs") %>

<div class="container">
	<h1 class="text-center">Create a New Campground</h1>
	<div class="row justify-content-center">
		<div class="col-md-6">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<label for="name"><strong>Name</strong></label>
					<input type="text" class="form-control" placeholder="Campground Name" name="campground[name]" id="name">
				</div>
				<div class="form-group">
					<label for="image"><strong>Image</strong></label>
					<input type="text" class="form-control" placeholder="Image URL" name="campground[image]" id="image">
				</div>
				<div class="form-group">
					<label for="price"><strong>Price</strong></label>
					<input type="number" class="form-control" placeholder="Price" name="campground[price]" min="0.01" step="0.01" id="price">
				</div>
				<div class="form-group">
					<label for="description"><strong>Description</strong></label>
					<textarea class="form-control" placeholder="Enter a description here" name="campground[description]" style="resize: none" id="description"></textarea>
				</div>
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</form>
			<a href="/campgrounds">Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer.ejs") %>