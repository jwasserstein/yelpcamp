<%- include("../partials/header.ejs") %>
<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp!</h1>
			<p>View our hand-picked campgrounds from all over the world.</p>
			<a href="/campgrounds/new" class="btn btn-primary btn-lg">Add a Campground</a>
		</div>
	</header>

	
	<div class="row">
		<% for(let i = 0; i < campgrounds.length; i++){ %>
			<div class="col-md-4 col-sm-6">
				<div class="thumbnail text-center">
					<img src="<%= campgrounds[i].image %>" style="height: 240px; width: 360px">
					<div class="caption">
						<h4><%= campgrounds[i].name %></h4>
					</div>
					<p>
						<a class="btn btn-primary" href="/campgrounds/<%= campgrounds[i]._id %>">More Info</a>
					</p>
				</div>
			</div>
		<% } %>
	</div>
	
</div>
<%- include("../partials/footer.ejs") %>