<%- include("../partials/header.ejs") %>
<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1 class="display-4">Welcome to YelpCamp!</h1>
			<p class="lead">View our hand-picked campgrounds from all over the world.</p>
			<a href="/campgrounds/new" class="btn btn-primary btn-lg">Add a Campground</a>
		</div>
	</header>

	
	<div class="row">
		<% for(let i = 0; i < campgrounds.length; i++){ %>
			<div class="col-lg-4 col-md-6">
				<div class="card text-center mb-4">
					<img src="<%= campgrounds[i].image %>" class="card-img-top" style="width: 100%; height: auto">
					<div class="card-body">
						<h4 class="card-title"><%= campgrounds[i].name %></h4>
					</div>
					<p>
						<a class="btn btn-primary" href="/campgrounds/<%= campgrounds[i]._id %>">More Info</a>
					</p>
				</div>
			</div>
		<% } %>
	</div>
	
</div>
<%- include("../partials/footer.ejs") %>