<%- include("../partials/header.ejs") %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">YelpCamp</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img src="<%= campground.image %>" class="img-responsive">
				<div class="caption-full">
					<h4 class="pull-right">$<%= campground.price %>/night</h4>
					<h4><a><%= campground.name %></a></h4>
					<p><%= campground.description %></p>
					<p><em>Posted by: <%= campground.author.username %></em></p>
					<% if(user && user._id.equals(campground.author.id)){ %>
						<a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-warning">Edit</a>
						<form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST" class="delete">
							<button class="btn btn-danger">Delete</button>
						</form>
					<% } %>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-primary">Add a comment</a>
				</div>
				<hr>
				<% for(let i = 0; i < campground.comments.length; i++){ %>
					<div class="row">
						<div class="col-md-12">
							<strong><%= campground.comments[i].author.username %></strong>
							<span class="pull-right">
								10 days ago 
								<% if(user && user._id.equals(campground.comments[i].author.id)) { %>
									 -
									<a href="/campgrounds/<%= campground._id %>/comments/<%= campground.comments[i]._id %>/edit" class="btn btn-xs btn-warning">Edit</a>
									<form class="delete" action="/campgrounds/<%= campground._id %>/comments/<%= campground.comments[i]._id %>?_method=DELETE" method="POST">
										<button class="btn btn-xs btn-danger">Delete</button>
									</form>
								<% } %>
							</span>
							<p><%= campground.comments[i].text %></p>
						</div>
					</div>
				<% } %>
			</div>
		</div>
	</div>
</div>
<%- include("../partials/footer.ejs") %>