<%- include("../partials/header") %>

<div class="container">
	<h1 class="text-center">Edit <%= campground.name %></h1>
	<div class="row justify-content-center">
		<div class="col-md-6">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label for="name"><strong>Name</strong></label>
					<input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>" id="name">
				</div>
				<div class="form-group">
					<label for="image"><strong>Image</strong></label>
					<input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>" id="image">
				</div>
				<div class="form-group">
					<label for="price"><strong>Price</strong></label>
					<input type="number" class="form-control" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01" id="price">
				</div>
				<div class="form-group">
					<label for="description"><strong>Description</strong></label>
					<textarea class="form-control" name="campground[description]" style="resize: none" id="description"><%= campground.description %></textarea>
				</div>
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</form>
			<a href="/campgrounds/<%= campground._id %>">Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>