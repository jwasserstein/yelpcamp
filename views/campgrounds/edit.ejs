<%- include("../partials/header") %>

<div class="container">
	<h1 class="text-center">Edit <%= campground.name %></h1>
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
				</div>
				<div class="form-group">
					<input type="number" class="form-control" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<textarea class="form-control" name="campground[description]" style="resize: none"><%= campground.description %></textarea>
				</div>
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</form>
			<a href="/campgrounds/<%= campground._id %>">Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>