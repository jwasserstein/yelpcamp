<%- include("../partials/header.ejs") %>

<div class="container">
	<h1 class="text-center">Create a New Comment on <%= campground.name %></h1>
	<div class="row justify-content-center">
		<div class="col-md-6">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
				<div class="form-group">
					<label for="text"><strong>Comment</strong></label>
					<textarea class="form-control" placeholder="Enter a comment here" name="text" style="resize: none" id="text"></textarea>
				</div>
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</form>
			<a href="/campgrounds/<%= campground._id %>">Back</a>
		</div>
	</div>
</div>

